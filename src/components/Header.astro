---
import NavLink from "./NavLink.astro";
import Button from "./Button.astro";
import MobileNav from "./MobileNav.astro";

const links = [
			{name:"Home", url:"#"},
			{name:"About", url:"#"},
			{name:"Contact", url:"#"},
			{name:"Blog", url:"#"},
			{name:"Careers", url:"#"},
		]

---

<header>
	<img src="/images/logo.svg" alt="logo">
	<nav>
		<ul>
			{links.map((link)=> <NavLink name={link.name} href={link.url}/>)}
		</ul>
	</nav>
	<div><Button name="Request Invite"/></div>
	<MobileNav />
</header>

<style>
	header{
		position: absolute;
		z-index: 100;
		left: 0;
		right: 0;
		background: var(--White);
		padding: 17px 200px 20px 200px ;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	img {
        transform: scale(1.3,1.3);
	}

	ul {
		margin: 0;
		list-style: none;
		text-align: center;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 25px;
	}

    @media only screen and (max-width: 1200px) {
	
		header {
			position: static;
			padding: 25px 20px;
		}

		ul {
			display: none;
		}

		div {
			display: none;
		}

	}

</style>
