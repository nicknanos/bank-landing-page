---
import Button from "./Button.astro";
---

<section>
    <div class="left">
        <h2>Next generation  digital banking</h2>
        <p> Take your financial life online. Your Easybank account will be a one-stop-shop 
            for spending, saving, budgeting, investing, and much more.
        </p>
        <Button name = "Request Invite" /> 
    </div>
    <img src="images/image-mockups.png" alt="Mock up">
</section>

<style>
    section {
        background: url('images/bg-intro-desktop.svg');
        background-repeat: no-repeat;
        /* background-position: 150% 200%; */
        background-position: calc(100vw*0.5)  200%;
        background-color: var(--VeryLightGray);
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 300px;
        padding-left: 200px;
        overflow: hidden;
    }

    @media only screen and (max-width: 1550px) {
 
    }

    h2 {
        font-size: 60px;
        font-weight: 300;
        color:var(--DarkBlue);
    }

    p {
        font-size: 20px;
        color: var(--GrayishBlue);
        line-height: 30px;
    }

    img {
        position: relative;
        z-index: 50;
        left: 105px;
        transform: scale(1.1,1.1);
    }

    .left > * {
        width: 90%;
        margin-bottom: 20px;
        
    }


    @media only screen and (max-width: 1200px) {

        section {
            background: url('images/bg-intro-mobile.svg');
            background-position: top;
            background-repeat: no-repeat;
            background-size:100vw auto ;
            flex-direction: column-reverse;
            gap: 0px;
            padding: 0 50px 80px 70px;
            text-align: center;
        }
        
        .left > * {
            margin-bottom: 60px;
            width: 100%;
        }

        img {
            left: 0;
            bottom: calc(100vw*0.22);
            width: 90%;
            height: 90%;
            object-fit: cover;
        }

        h2,p {
            margin: 0;
            text-shadow: 1px 1px 2px var(--VeryLightGray);
        }
    }
</style>